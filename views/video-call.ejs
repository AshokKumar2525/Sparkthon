<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Video Call - <%= appID %></title>
  <style>
    #video-container {
      width: 100%;
      height: 600px;
    }
  </style>
</head>
<body>
  <!-- <h2>Welcome, <%= appID %> ðŸ‘‹</h2> -->
  <div id="video-container"></div>
  <script src="https://cdn.jsdelivr.net/npm/@zegocloud/zego-uikit-prebuilt@2.15.0/zego-uikit-prebuilt.js"></script>


<script>
  window.onload = async () => {
    const appID = <%= appID %>;
    const serverSecret = <%- JSON.stringify(serverSecret) %>; // for dev only
    const roomID = <%- JSON.stringify(roomID) %>;
    const userID = <%- JSON.stringify(userID) %>;
    const userName = <%- JSON.stringify(userName) %>;

    const kitToken = ZegoUIKitPrebuilt.generateKitTokenForTest(
      appID,
      serverSecret,
      roomID,
      userID,
      userName
    );

    const zp = ZegoUIKitPrebuilt.create(kitToken);
    zp.joinRoom({
      container: document.getElementById("video-container"),
      sharedLinks: [{
        name: "Invite Link",
        url: window.location.href,
      }],
      scenario: {
        mode: ZegoUIKitPrebuilt.GroupCall
      },
    });
  };
</script>


</body>
</html>
