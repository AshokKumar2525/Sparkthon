<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Room - <%= room.roomId %></title>
  <link rel="stylesheet" href="/css/five_sections.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f0f8ff;
      padding: 20px;
    }
    h2 {
      text-align: center;
    }
    #chat {
      display: flex;
      flex-direction: column;
      gap: 30px;
      margin-top: 30px;
    }
    .chat-message {
      background: white;
      padding: 10px;
      border-radius: 8px;
      width: fit-content;
      box-shadow: 0 0 4px rgba(0, 0, 0, 0.1);
    }
    .product-item {
      max-width: 300px;
    }
  </style>
</head>
<body>
  <a href="/main_page"><button>Back to Main Page</button></a>
  <h2>Room ID: <%= room.roomId %></h2>

  <div id="chat">
    <% room.activityLog.forEach(activity => { %>
      <% if (activity.type === 'product') { %>
        <div class="product-item">
          <div class="item-image-container">
            <img src="/<%= activity.image %>" alt="Product Image" class="item-image" width="200" height = "300">
          </div>
          <div class="item-info">
            <h3 class="item-name"><%= activity.title %></h3>
            <p class="item-price"><%= activity.price %></p>
            <% if (activity.detail) { %>
              <p class="item-detail"><%= activity.detail %></p>
            <% } %>
            <span class="item-detail">Shared by <%= activity.sharedBy %></span>
          </div>
        </div>
      <% } else if (activity.type === 'message') { %>
        <div class="chat-message">
          <strong><%= activity.sender %>:</strong> <%= activity.content %>
        </div>
      <% } %>
    <% }) %>
  </div>

  <form action="/room/<%= room.roomId %>/message" method="POST">
    <input type="text" name="content" placeholder="Type a message" required>
    <button type="submit">Send</button>
  </form>

  <form action="/room/<%= room.roomId %>/end" method="POST">
    <button class="end">End Room</button>
  </form>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const chat = document.getElementById('chat');
      chat.scrollTop = chat.scrollHeight; // Scroll to bottom on load
    });
    document.querySelector('.end').addEventListener('click', (e) => {
      if (!confirm("Are you sure you want to end this room?")) {
        e.preventDefault();
      }
    }); 
    document.querySelector()
  </script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    const roomId = "<%= room.roomId %>";
    socket.emit('join-room', roomId);

    socket.on('new-activity', data => {
      const chat = document.getElementById('chat');
      const wrapper = document.createElement('div');
      wrapper.innerHTML = data.html;
      chat.appendChild(wrapper);
    });
  </script>
</body>
</html>
