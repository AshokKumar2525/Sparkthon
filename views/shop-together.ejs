<h2>Your Rooms</h2>
<% rooms.forEach(room => { %>
  <div>
    <a href="/room/<%= room.roomId %>">Room: <%= room.roomId %></a>
    <% if (room.ended) { %>
      <span>(Ended)</span>
    <% } else { %>
      <span>(Ongoing)</span>
    <% } %>
    <% if (room.createdBy === currentUser) { %>
      <span> - You created this</span>
    <% } %>
  </div>
<% }) %>


<hr>

<h3>Create New Room</h3>
<form action="/shop-together/invite" method="POST">
  <input type="text" name="emails" placeholder="Enter comma-separated emails" required />
  <button type="submit">Start Room</button>
</form>
